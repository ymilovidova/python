# Задача 3:
import random

randomNumbers = []
numLen = int(input('Введите количество чисел в списке: '))
nL = 0

while nL < numLen:
    randomNumbers.append(random.randint(-100, 100))
    nL += 1

print(randomNumbers)

HARD

# Задача 1:

import string

text = input("Введите текст: ")
text = text.lower()

engAlph = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v',
           'w', 'x', 'y', 'z']

for puncts in string.punctuation:
    while puncts in text:
        text = text.replace(puncts, "")

text = text.split(" ")

wordsCount = 0

for word in text:
    wordsCount += 1

text = (f"{text}")

for punct in string.punctuation + " ":
    while punct in text:
        text = text.replace(punct, "")

lettersCount = 0

for i in text:
    if i in engAlph:
        lettersCount += 1

print("В тексте ", wordsCount, ' слов и ', lettersCount, " английских букв")

# Задача 2:

import string

textOne = input("Введите текст: ")
textTwo = input("Введите текст: ")

textOne = textOne.lower()
textTwo = textTwo.lower()

for punct1 in string.punctuation:
    while punct1 in textOne:
        textOne = textOne.replace(punct1, "")
    while punct1 in textTwo:
        textTwo = textTwo.replace(punct1, "")

textOne = textOne.split(" ")
textTwo = textTwo.split(" ")

wordsSim = []

for W in textOne:
    if W in textTwo:
        wordsSim.append(W)

print(wordsSim)
