# Задача 1:

список фруктов = ['яблоко', 'манго', 'апельсин', 'арбуз']
count = 0
for i in список фруктов:
    count += 1
    print(f"{count}.", f"{i:>10}")




    # Задача 2:

wordsOne = ['Ручка', 'Тетрадка', 'Берн', 'Берн2']
wordsTwo = ['Apple', 'Mac', 'Android', 'Safari']

for I in wordsOne:
    if I in wordsTwo:
        wordsOne.remove(I)

print(wordsOne)
print(wordsTwo)

# Задача 3:

numbersList = [1, 123, 1.3, 100, 30, 600, 21, 75, 30]

numbersNew = []

for N in numbersList:
    if N % 2 == 0:
        N /= 4
        numbersNew.append(N)
    else:
        N *= 2
        numbersNew.append(N)

print(numbersNew)

# NORMAL
# Задача 1:
import math

numbers = [2, -5, 8, 9, -25, 25, 4]
numbersRoots = []

for r in numbers:
    r = math.sqrt(r)
    if r // 1 == r:
        numbersRoots.append(r)
print(numbersRoots)

